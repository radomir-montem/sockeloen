{% style %}
  .giftcard-header__media-link img {
    max-width: {{ section.settings.logo_width }}px;
  }

  .giftcard-header {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media (max-width: 768px) {
    .giftcard-header__media-link img {
        max-width: {{ section.settings.logo_width_mobile }}px;
    }

    .giftcard-header {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{% endstyle %}
<div class="giftcard-header">
    {% if section.settings.logo != blank %}
        <a class="giftcard-header__media-link" href="{{ shop.url }}">
            {{ section.settings.logo | image_url: width: section.settings.logo_width | image_tag }}
        </a>
    {% else %}
        <a class="giftcard-header__link h2 link" href="{{ shop.url }}">
            {{ shop.name }}
        </a>
    {% endif %}
</div>
{% schema %}
{
    "name": "Header",
    "settings": [
        {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
        },
        {
            "type": "range",
            "id": "logo_width",
            "label": "Desktop logo width",
            "default": 200,
            "min": 50,
            "max": 400,
            "step": 10,
            "unit": "px"
        },
        {
            "type": "range",
            "id": "logo_width_mobile",
            "label": "Mobile logo width",
            "default": 140,
            "min": 50,
            "max": 200,
            "step": 10,
            "unit": "px"
        },
        {
          "type": "header",
          "content": "t:sections.all.padding.section_padding_heading"
        },
        {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 36
        }
    ]
}
{% endschema %}